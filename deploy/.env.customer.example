# Customer deployment environment
# Copy to .env and run:
# docker compose --env-file .env -f deploy/docker-compose.customer.yml up -d

# Image source
PRAETOR_IMAGE_PREFIX=ghcr.io/xbounceit
PRAETOR_VERSION=v1.0.0

# Public frontend origin used by backend CORS
# Use your real URL in production (example: https://erp.example.com)
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

# Database credentials
POSTGRES_USER=praetor
POSTGRES_PASSWORD=change-me-strong-password
POSTGRES_DB=praetor

# Redis URL (optional override)
# REDIS_URL=redis://redis:6379/0

# Required app secrets
JWT_SECRET=change-me-long-random-jwt-secret
ENCRYPTION_KEY=change-me-long-random-encryption-key

# Bootstrap admin password (username is always "admin")
ADMIN_DEFAULT_PASSWORD=change-me-strong-admin-password

# Optional demo data. Keep false for production.
DEMO_SEEDING=false
